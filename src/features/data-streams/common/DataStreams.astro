---
const GettingStarted = await Astro.glob("./gettingStarted.mdx")
const GettingStartedComponent = GettingStarted[0].Content
const GettingStartedHardhat = await Astro.glob("./gettingStartedHardhat.mdx")
const GettingStartedHardhatComponent = GettingStartedHardhat[0].Content
const AsideOnChainVerification = await Astro.glob("./asideOnChainVerification.mdx")
const AsideOnChainVerificationComponent = AsideOnChainVerification[0].Content
const StreamsDirectEarlyAccess = await Astro.glob("./streamsDirectEarlyAccess.mdx")
const StreamsDirectEarlyAccessComponent = StreamsDirectEarlyAccess[0].Content

const AsideDisclaimer = await Astro.glob("./asideDisclaimer.mdx")
const AsideDisclaimerComponent = AsideDisclaimer[0].Content

export type Props = {
  section?:
    | "gettingStarted"
    | "gettingStartedHardhat"
    | "asideOnChainVerification"
    | "streamsDirectEarlyAccess"
    | "asideDisclaimer"
}
const { section } = Astro.props as Props
---

{section === "gettingStarted" && <GettingStartedComponent />}
{section === "gettingStartedHardhat" && <GettingStartedHardhatComponent />}
{section === "asideOnChainVerification" && <AsideOnChainVerificationComponent />}
{section === "streamsDirectEarlyAccess" && <StreamsDirectEarlyAccessComponent />}
{section === "asideDisclaimer" && <AsideDisclaimerComponent />}
